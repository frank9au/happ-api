<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.happy.sys.user.dao.mapper.IUserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.happy.sys.user.dao.po.UserPO">
        <id column="id" property="id" />
    <result column="create_date" property="createDate" />
    <result column="update_date" property="updateDate" />
        <result column="username" property="username" />
        <result column="nickname" property="nickname" />
        <result column="password" property="password" />
        <result column="salt" property="salt" />
        <result column="dept_id" property="deptId" />
        <result column="picture" property="picture" />
        <result column="sex" property="sex" />
        <result column="email" property="email" />
        <result column="phone" property="phone" />
        <result column="remark" property="remark" />
        <result column="status" property="status" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        create_date,
        update_date,
        id, username, nickname, password, salt, dept_id, picture, sex, email, phone, remark, status
    </sql>

    <!--自定义分页查询-->
    <select id="selectListByPage" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from sys_user
        <where>
            <choose>
                <when test="dto == null">
                    status = 1
                </when>
                <otherwise>
                    <if test="dto.id!= null">
                        and id = #{dto.id}
                    </if>
                    <if test="dto.username!= null and dto.username!='' ">
                        and username = #{dto.username}
                    </if>
                    <if test="dto.nickname!= null and dto.nickname!='' ">
                        and nickname = #{dto.nickname}
                    </if>
                    <if test="dto.password!= null and dto.password!='' ">
                        and password = #{dto.password}
                    </if>
                    <if test="dto.salt!= null and dto.salt!='' ">
                        and salt = #{dto.salt}
                    </if>
                    <if test="dto.deptId!= null">
                        and dept_id = #{dto.deptId}
                    </if>
                    <if test="dto.picture!= null and dto.picture!='' ">
                        and picture = #{dto.picture}
                    </if>
                    <if test="dto.sex!= null">
                        and sex = #{dto.sex}
                    </if>
                    <if test="dto.email!= null and dto.email!='' ">
                        and email = #{dto.email}
                    </if>
                    <if test="dto.phone!= null and dto.phone!='' ">
                        and phone = #{dto.phone}
                    </if>
                    <if test="dto.remark!= null and dto.remark!='' ">
                        and remark = #{dto.remark}
                    </if>
                    <choose>
                        <when test="dto.status != null">
                            and status = #{dto.status}
                        </when>
                        <otherwise>
                            and status = 1
                        </otherwise>
                    </choose>
                </otherwise>
            </choose>
        </where>
        order by create_date, update_date desc
    </select>

</mapper>
